.header{
  height:12rem;
  background:-webkit-gradient(linear, 0% 50%, 0% 100%,from(rgba(255,0,0,1)), to(rgba(255, 255, 255, 0.1)));
}
.header-top{
  padding-top:2rem;
  color: #fff;
}
.t-r{
  float: right;
  border-radius: 4px;
  padding: 4px 7px;
  margin-right:0.3rem;
  background: rgba(255,255,255,0.5);
}
.t-l{
  display: inline-block;
  line-height: 25px;
  padding-left:10px;
}
.ul{
width: 90%;
margin: 2rem auto;
background: #fff;
border-radius: 5px;
box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}
.li{
width: 25%;
padding: 0.5rem 0;
text-align: center;
display: inline-block;
}
.iconimg{
  width: 35px;
  height: 35px;
}
.icon-text{
  display: inline-block;
  width: 100%;
  font-size: 0.45rem;
}